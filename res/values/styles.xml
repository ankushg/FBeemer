<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Label">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:typeface">sans</item>
		<item name="android:capitalize">characters</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:focusable">false</item>
		<item name="android:padding">4px</item>
	</style>
	<style name="CheckBoxLabel" parent="@style/Label">
		<item name="android:enabled">true</item>
	</style>
	<style name="Theme.FBeemer.NoBack" parent="@android:style/Theme.Black.NoTitleBar">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
		<item name="android:textColorTertiary">@color/white</item>
	</style>
	<style name="Theme.FBeemer" parent="@style/Theme.FBeemer.NoBack">
		<item name="android:background">@color/blue</item>
	</style>
	<style name="Theme.FBeemer.Invert" parent="@android:style/Theme.Light.NoTitleBar">
		<item name="android:background">@color/white</item>
		<item name="android:textColorPrimary">@color/blue</item>
		<item name="android:textColorSecondary">@color/blue</item>
		<item name="android:textColorTertiary">@color/blue</item>
	</style>
</resources>
